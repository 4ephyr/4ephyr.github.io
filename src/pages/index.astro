---
import Layout from '../layouts/Layout.astro';
import Link from '../components/Link.jsx';
import Name from '../components/Name.jsx';
---

<Layout title="4ephyr">
	<main class="m-0 p-0 overflow-hidden selection:bg-black">
		<header class="flex justify-end w-full sm:px-8 px-4 py-6">
			<Link link="About" refer='about/'/>
			<Link link="Blog" refer='blog/'/>
		</header>
		<div class="absolute h-[100vh] w-full flex justify-center items-center top-0 -z-10">
			<Name name="4ephyr"></Name>
		</div>
	</main>
</Layout>